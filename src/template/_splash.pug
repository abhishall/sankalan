- const prizeAmount = '2,00,000'

mixin navItem($name, $link)
  li
    a(href=$link, class="xhr" data-id=`ct-nav-${$name.toLowerCase().replace(/ /g, '-')}`) !{$name}

mixin nav()
  nav.content-nav
    ul
      li
        a.button(href='/sankalan/register/' style="text-shadow: none; color: #000" class="xhr" data-id='register-main') Register
      +navItem('Meet the team', '/sankalan/team/')
      +navItem('Need help?', '/sankalan/contact/')


.splash-wrapper
  .splash
    .splash-borders
      .top
      .right
      .bottom
      .left
    .splash-content
      div
        .title
          h1.splash-logo-text.logo Sankalan
        .text
          p Sankalan is the annual tech fest of Dept Of Computer Science, University of Delhi (DUCS).
          p &nbsp;
          p(title="Subject to change (increment)") Prizes worth #[strong &#8377;#{prizeAmount}]!
          p &nbsp;
          p#splash-date
            span(title="Saturday, April 7th, 2019") April 7, 2019
            | &nbsp;&mdash;&nbsp;
            span(title="Sunday, April 8th, 2019") April 8, 2019
          p
            strong
              a(href="https://goo.gl/maps/YqMFB3uxy9m",
               target="_blank" rel="noopener",
               title="Get directions on Google Maps. See 'About' page for details.", style="color: #fafafa")  28&deg;41'17.2"N 77&deg;12'25.7"E
        +nav()
